<h2><%= @book.title %></h2>
<div class="row">
  <div class="col-md-4">
	<%= image_tag @book.book_img.url(:book_show), class: "book-show" %>
  </div>
  <div class="col-md-8">
	<h3>Author: <%= @book.author %></h3>
	<h4>Genre: <%= @book.genre.name %></h4>
	<h5>Synopsis:</h5>
	<p><%= @book.synopsis %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <%= render @book.reviews %>
    <div>
      <%= link_to "Add Review", new_book_review_path(@book)%>
    </div>
  </div>
</div>

<% if user_signed_in? %>

  <%= link_to "Edit", edit_book_path(@book) %>
  <%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Didnt like this book?" } %>
  <%= link_to "Back", root_path %>

<% end %>



