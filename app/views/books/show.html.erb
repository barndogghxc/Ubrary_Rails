
<div class="row">
  <div class="col-md-10">
    <h2><%= @book.title %></h2>
  </div>
  <div>
    <%= link_to "Back", root_path%>
    <% if user_signed_in? %>
      <%= link_to "Edit", edit_book_path(@book)%>
      <%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Didnt like this book?" }%>
      <%- unless current_user.favorite_books.exists?(id: @book.id) -%>
<%= link_to 'Add to favorites', favorite_books_path(book_id: @book), method: :post %>
<%- else -%>
<%= link_to 'Remove from favorites', favorite_book_path(@book), method: :delete %>
<%- end -%>
    <% end %> 
  </div>  
</div>

<div class="row">
  <div class="col-md-4">
    <%= image_tag @book.book_img.url(:book_show), class: "book-show" %>
  </div>
  <div class="col-md-8">
    <div class="book-info">
      <h2><%= @book.title %></h2>
      <h3>From <%= @book.author %></h3>
      <h4>Genre: <%= @book.genre.name %></h4>
      <h5>Synopsis:</h5>
      <p><%= @book.synopsis %></p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="reviews">
      <% if @book.reviews.count == 0 %>
        <h1>There are no reviews currently for this book</h1>
      <% else %>
        <h1>Reviews</h1>
        <%= render @book.reviews %>
      <% end %>
      <div>
        <%= link_to "Add Review", new_book_review_path(@book)%>
      </div>
    </div>  
  </div>
</div>





