<div class="col-md-6 col-md-offset-3">
<div class="row">
  <div class="col-md-10">
    <h1>Edit Book</h1>
  </div>
  <div class="col-md-2">
    <%= link_to "Go back!", book_path(@book)%>
  </div>
</div>

<%= simple_form_for @book, :html => { :multipart => true } do |f| %>
  <%= f.select :genre_id, @genres %>
  <%= f.file_field :book_img %>
  <%= f.input :title, label: "Book Title" %>
  <%= f.input :author %>
  <%= f.input :synopsis %>
  <%= f.button :submit %>
<% end %>
</div>