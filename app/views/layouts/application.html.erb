<!DOCTYPE html>
<html>
  <head>
    <title>Ubrary</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	<nav class="navbar navbar-default">
	  <div class="container">
	  	<div class="navbar-header">
	  		<%= link_to "Ubrary", root_path, class: "navbar-brand" %>
	  	</div>
	  	<ul class="nav navbar-nav  navbar-right">
	  		<li><%= link_to "Sign Up for Ubrary", new_user_registration_path %></li>
	  		<% if user_signed_in? %>
	  		  <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
	  		<% else %>
	  		  <li><%= link_to "Ubrary Log In", new_user_session_path %></li>
	  		<% end %>
	  	</ul>
	  	<ul class="nav navbar-nav">
	  	  <li class="dropdown">
	  	  	<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Genres</a>
			<ul class="dropdown-menu" role="menu">
			  <% Genre.all.each do |genre| %>
			  	<li>
			  	  <%= link_to genre.name, books_path(genre: genre.name), class: "link" %>
			  	</li>
			  <% end %>
			</ul>
	  	  </li>
	  	  <% if user_signed_in? %>
	  	    <li><%= link_to "Add Book", new_book_path %></li>
	  	  <% end %>
	  	</ul>
	  </div>
	</nav>

  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="container">
    <%= yield %>
	</div>
  </body>
</html>
